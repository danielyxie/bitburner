{
    "defaultSeverity": "error",
    "extends": [
        "tslint:all"
    ],
    "jsRules": {},
    "linterOptions": {
        "exclude": [
            "node_modules/"
        ]
    },
    "rules": {
        "completed-docs": [
            true,
            {
                "classes": true,
                "enums": true,
                "enum-members": true,
                "functions": {
                    "visibilities": [
                        "exported"
                    ]
                },
                "interfaces": true,
                "methods": {
                    "privacies": [
                        "public"
                    ]
                },
                "namespaces": true,
                "properties": true,
                "types": true,
                "variables": {
                    "visibilities": [
                        "exported"
                    ]
                }
            }
        ],
        "linebreak-style": false,
        "member-access": [
            true,
            "no-public"
        ],
        "no-any": false,
        "no-inferrable-types": [
            false,
            "ignore-params",
            "ignore-properties"
        ],
        "no-magic-numbers": [true, -1, 0, 1, 2, 10, 100],
        "no-null-keyword": false,
        "no-unsafe-any": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "only-arrow-functions": [
            true,
            "allow-declarations",
            "allow-named-functions"
        ],
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "typedef": [
            true,
            "call-signatures",
            "arrow-call-signatures",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "variable-declaration",
            "member-variable-declaration",
            "object-destructuring",
            "array-destructuring"
        ]
    },
    "rulesDirectory": []
}

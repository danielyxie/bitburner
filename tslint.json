{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:all"
    ],
    "jsRules": {},
    "linterOptions": {
        "exclude": [
            "node_modules/"
        ]
    },
    "rules": {
        "completed-docs": [
            false,
            {
                "classes": true,
                "enums": true,
                "enum-members": true,
                "functions": {
                    "visibilities": "exported"
                },
                "interfaces": false,
                "methods": {
                    "privacies": "public"
                },
                "namespaces": true,
                "properties": true,
                "types": true,
                "variables": {
                    "visibilities": "exported"
                }
            }
        ],
        "increment-decrement": false,
        "linebreak-style": false,
        "max-line-length": [
            true,
            160
        ],
        "member-access": [
            true,
            "no-public"
        ],
        "member-ordering": [
            false
        ],
        "newline-before-return": false,
        "no-any": false,
        "no-inferrable-types": [
            false,
            "ignore-params",
            "ignore-properties"
        ],
        "no-magic-numbers": [
            true,
            -1,
            0,
            1,
            2,
            10,
            100
        ],
        "no-null-keyword": false,
        "no-unsafe-any": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "only-arrow-functions": [
            true,
            "allow-declarations",
            "allow-named-functions"
        ],
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "variable-declaration",
            "member-variable-declaration",
            "object-destructuring",
            "array-destructuring"
        ]
    },
    "rulesDirectory": []
}
